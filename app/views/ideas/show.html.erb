<p><a href='/users/<%= current_user.id %>'><%= @ideas.user.name.capitalize %></a> says: <%= @ideas.content %></p>

<h4>People Who Liked this: </h1>

<table class='table'>
   <thead>
      <tr>
         <th>Alias</th>
         <th>Name</th>
      </tr>
   </thead>
   <% @ideas.users.each do |user| %>
      <tbody>
         <tr>
            <td><%= user.alias.capitalize %></td>
            <td><%= user.name.capitalize %></td>
         </tr>
      </tbody>
   <% end %>
</table>
